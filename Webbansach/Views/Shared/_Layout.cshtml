@using Webbansach.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.js"></script>
    <script src="https://kit.fontawesome.com/9f6f80da6b.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/Home.js"></script>
    <link rel="stylesheet" href="~/Content/style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav>
        <div class="nav-bar">
            <div id="myNav" class="nav-menu-left">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <div class="overlay-content">
                    <a href="#">Home</a>
                    <a href="#">Danh Mục</a>
                    <a href="#">Hỗ Trợ</a>
                    <a href="#">Liên Hệ</a>
                    @if (User.IsInRole("SuperAdmin"))
                    {

                        <a class="btn btn-dark" href="@Url.Action("QuanLi","Admin")">
                            Quản lí
                        </a>            
                    }
                </div>
            </div>
            <span class="nav-icon" onclick="openNav()">&#9776;</span>
            
            <div class="nav-logo">
                <i onclick="location.href='@Url.Action("Index","SanPhams")'"><img src="~/HinhAnh/Logo.png" style="width: 70px; height: auto;" alt=""></i>
            </div>
            <div class="nav-menu-right">
                <ul>
                    <li class="ul-item" style="padding-top: 15px; ">
                        @using (Html.BeginForm("Searching", "SanPhams", FormMethod.Get))
                        {
                            <p>
                                <input id="searchatring" name="searchString" type="text" value="" style="border: #FF6161 solid 1px;" placeholder="Bạn muốn tìm gì...">
                                <button style="border:none;background:none;color:firebrick" class="btntop" type="submit"><i class="fas fa-search"></i></button>
                            </p>
                         }
                    </li>
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>
                    <li id="nav-cart">
                        <button onclick="location.href='@Url.Action("Checkout","SanPhams")'">
                            @{ List<Product> cart = (List<Product>)Session["cart"];}
                            @if (Session["cart"] != null)
                            {
                                int item = 0;
                                var count = cart.Count();
                                for (int i = 0; i < count; i++)
                                {
                                    item = count;
                                    
                                }
                                <span style="color: white;">@item</span>
                            }
                            <i class="fas fa-shopping-cart" style="color: white;"></i>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()

    <footer>
        <div class="footer-icon">
            <div class="f-icon-left">
                <img src="~/HinhAnh/Logo.png" alt="">
            </div>
            <div class="f-icon-center">
                <i class="fab fa-facebook"></i>
                <i class="fab fa-instagram"></i>
            </div>
            <div class="f-icon-right">
                <i class="fab fa-paypal"><span>PAYPAL</span></i>
                <i class="fas fa-truck"><span>COD</span></i>
            </div>
        </div>
        <div class="footer-contact">
            <div class="contact">
                <i class="fas fa-envelope"></i>
                <h3>MAIL</h3>
                <span>bstore@gmail.com</span>
            </div>
            <div class="contact">
                <i class="fas fa-headset"></i>
                <h3>CALL</h3>
                <span>1900.000</span>
            </div>
            <div class="contact">
                <i class="fas fa-map-marker-alt"></i>
                <h3>FIND US</h3>
                <span>SU VAN HANH, HCM</span>
            </div>
        </div>
        <hr id="hr">
        <h3 id="f-bottom">COPPYRIGHT@2020</h3>
    </footer>
    @RenderSection("scripts", required: false)
</body>

</html>
