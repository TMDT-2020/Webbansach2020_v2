@using Webbansach.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.js"></script>
    <script src="https://kit.fontawesome.com/9f6f80da6b.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/Home.js"></script>
    <link rel="stylesheet" href="~/Content/style.css" />

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav>
        <div class="nav-bar">
            <div id="myNav" class="nav-menu-left">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <div class="overlay-content">
                    <a href="#">Home</a>
                    <a href="#">Danh Mục</a>
                    <a href="#">Hỗ Trợ</a>
                    <a href="#">Liên Hệ</a>
                </div>
            </div>
            <span class="nav-icon" onclick="openNav()">&#9776;</span>
            <div class="nav-logo">
                <i onclick="location.href='@Url.Action("Index","SanPhams")'"><img src="~/HinhAnh/Logo.png" style="width: 70px; height: auto;" alt=""></i>
            </div>
            <div class="nav-menu-right">
                <ul>
                    <li class="ul-item" style="padding-top: 15px; ">
                        @using (Html.BeginForm("Searching", "SanPhams", FormMethod.Get))
                        {
                            <p>
                                <input id="searchString" name="searchString" type="text" value="" style="border: #FF6161 solid 1px;" placeholder="Bạn muốn tìm gì...">
                                <button style="border:none;background:none;color:firebrick" class="btntop" type="submit"><i class="fas fa-search"></i></button>
                            </p>
                        }
                    </li>
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>
                    <li id="nav-cart">
                        <button onclick="location.href='@Url.Action("Checkout","SanPhams")'">
                            @if (Session["cart"] != null)
                            {
                                foreach (Product item in (List<Product>)Session["cart"])
                                {
                                    <span style="color: white;">@item.SoLuong</span>
                                }
                            }
                            <i class="fas fa-shopping-cart" style="color: white;"></i>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer>
        <div class="footer-icon">
            <div class="f-icon-left">
                <img src="~/HinhAnh/Logo.png" alt="">
            </div>
            <div class="f-icon-center">
                <i class="fab fa-facebook"></i>
                <i class="fab fa-instagram"></i>
            </div>
            <div class="f-icon-right">
                <i class="fab fa-paypal"><span>PAYPAL</span></i>
                <i class="fas fa-truck"><span>COD</span></i>
            </div>
        </div>
        <div class="footer-contact">
            <div class="contact">
                <i class="fas fa-envelope"></i>
                <h3>MAIL</h3>
                <span>bstore@gmail.com</span>
            </div>
            <div class="contact">
                <i class="fas fa-headset"></i>
                <h3>CALL</h3>
                <span>1900.000</span>
            </div>
            <div class="contact">
                <i class="fas fa-map-marker-alt"></i>
                <h3>FIND US</h3>
                <span>SU VAN HANH, HCM</span>
            </div>
        </div>
        <hr id="hr">
        <h3 id="f-bottom">COPPYRIGHT@2020</h3>
    </footer>
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>

</html>
