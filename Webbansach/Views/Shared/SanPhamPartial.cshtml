@using Webbansach.Models
@{
    ApplicationDbContext db = new ApplicationDbContext();
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.js"></script>

    <script src="~/Scripts/Home.js"></script>
}
<main>
    <div class="container-auto">
        <div class="product">
            <hr />
            <div class="name-product">
                <h3>Sản Phẩm Giảm Giá</h3>
            </div>
            <div class="owl-carousel-1 owl-theme">
                @foreach (var item in db.sanPhams)
                {
                    if (item.PTKM > 0)
                    {
                        <div class="item-product">
                            <div class="item-product-overlay">
                                <img src="~/HinhAnh/@item.HinhAnh" alt="Owl Image">
                                <a class="overlay" href="@Url.Action("Details","SanPhams",new { id = item.ID })">Mua ngay</a>
                            </div>
                            <div class="sub-product">
                                <i class="fas fa-star"></i>
                                <h3>@(Webbansach.Controllers.SanPhamsController.getString(item.TenSP))</h3>
                                <span><p class="p1">@item.GiaKM đ</p><p class="p2">@item.GiaSP đ</p></span>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</main>

