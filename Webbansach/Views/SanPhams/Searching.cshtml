@model IEnumerable<Webbansach.Models.SanPham>
@{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.js"></script>
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/Scripts/Home.js"></script>
}

<main>
    <div class="container-auto">
        <div class="name-product">
            <h3>Tất cả sản phẩm</h3>
        </div>
        <div class="product2-1">
            <div class="product2">

                @foreach (var item in Model)
                {
                    <div class="item-product2">
                        <div class="item-product-overlay-2">
                            <img src="~/HinhAnh/@item.HinhAnh" alt="Owl Image">
                            <a class="overlay-2" href="@Url.Action("Details","SanPhams",new { id = item.ID })">Mua ngay</a>
                        </div>
                        <div class="sub-product-2">
                            <i class="fas fa-star"></i>
                            <h4>@item.TenSP</h4>
                            <span><p class="p1">@item.GiaKM</p><p class="p2">@item.GiaSP</p></span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>
