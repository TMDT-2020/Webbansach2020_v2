@using Webbansach.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{

}
@if (Session["cart"] == null)
{
    <div class="alert alert-danger">
        <strong>No product added to cart!</strong>
    </div>

}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Ship</th>
                <th>Tax</th>
                <th>Discount</th>
                <th>Line Total</th>

            </tr>
        </thead>
        <tbody>
            @{
                int ship = 15000;
                int taxx = 10000;
                int discount = 5000;
                int Total = 0;
            }
            @foreach (Product item in (List<Product>)Session["cart"])
            {
                int lineTotal = Convert.ToInt32((item.SoLuong * item.SanPham.GiaKM) + ship + taxx - discount);
                Total = Convert.ToInt32(@Total + lineTotal);

                Session["SesTotal"] = Total;

                <tr>
                    <td>@item.SanPham.TenSP</td>
                    <td>@item.SanPham.GiaKM</td>
                    <td>@item.SoLuong</td>
                    <td>@ship</td>
                    <td>@taxx</td>
                    <td>@discount</td>
                    <td>@lineTotal</td>
                </tr>
            }

            <tr>
                <td colspan="4" class="text-right"><b>Total: @Total</b></td>

            </tr>
        </tbody>
    </table>
    if (User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("ProcessOrder", "SanPhams")" class="btn btn-success">Thanh toán</a>
        <a href="@Url.Action("PaymentWithPaypal", "Payment")" class="btn btn-success">Paypal</a>
    }
    else
    {
        <a href="@Url.Action("Orderwithnoname", "SanPhams")" class="btn btn-success">Nhập thông tin khách hàng</a>
    }
}

