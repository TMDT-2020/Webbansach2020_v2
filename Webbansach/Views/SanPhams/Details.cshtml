    <div class="infor-product">
        <div class="infor-1 infor">
            <img src="~/HinhAnh/@Model.HinhAnh" alt="">
        </div>
        <div class="infor-2 infor">
            <h2>@Model.TenSP</h2><br>
            <span>Tác giả : @Model.TacGia</span><br>
            <span>Danh mục : <a href="#">@Model.MaLoai</a></span>
            <div class="stars">
                <form action="">
                    <input class="star star-5" id="star-5" type="radio" name="star" />
                    <label class="star star-5" for="star-5"></label>
                    <input class="star star-4" id="star-4" type="radio" name="star" />
                    <label class="star star-4" for="star-4"></label>
                    <input class="star star-3" id="star-3" type="radio" name="star" />
                    <label class="star star-3" for="star-3"></label>
                    <input class="star star-2" id="star-2" type="radio" name="star" />
                    <label class="star star-2" for="star-2"></label>
                    <input class="star star-1" id="star-1" type="radio" name="star" />
                    <label class="star star-1" for="star-1"></label>
                </form>
            </div>
            <br>
            <span style="color: red; font-size: 20px;"><b>@((int)Model.GiaKM) đ</b> <p class="p2">@Model.GiaSP đ</p></span><br>

            @using (Html.BeginForm("AddToCart", "SanPhams", new { productId = Model.ID }, FormMethod.Post))
            {

                <button type="submit"> Mua Ngay</button>

            }

        </div>
        <div class="infor-3 infor">
            <h2>ƯU ĐÃI LIÊN QUAN</h2>
            <a href="#">freeship đơn 10.000</a><br>
            <a href="#">freeship đơn 10.000</a><br>
            <a href="#">freeship đơn 10.000</a><br>
        </div>
    </div>
    <div class="product-description">
        <div class="product-detail">
            <h2>Thông tin sản phẩm</h2>
            <div class="name-detail">
                <b>Mã sách</b><br>
                <b>Tên sách</b><br>
                <b>Tác giả</b><br>
                <b>NXB</b><br>
                <b>Kích thước</b><br>
                <b>Số trang</b><br>
            </div>
            <div class="detail">
                <i>@Model.ID</i><br>
                <i>@Model.TenSP</i><br>
                <i>@Model.MaTG</i><br>
                <i>@Model.MaNXB</i><br>
                <i>@Model.ChieuCao*@Model.ChieuRong</i><br>
                <i>@Model.SoTrang</i><br>

            </div>

        </div>
        <br />
        <div class="description">
            <h2>Mô tả sản phẩm</h2>
            <span>
                @Model.Mota
            </span>
        </div>
        <div>
            <div id="fb-root"></div>

            <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v9.0&appId=396073371824051&autoLogAppEvents=1" nonce="Hla2cw0o"></script>
            <div class="fb-comments" data-href="https://localhost:44388/SanPhams/Details/@Model.ID" data-numposts="10" data-width=""></div>

        </div>

    </div>

</main>
